@page "/admin"
@using System.Net.Http.Json
@using System.Net.Http.Headers
@inject HttpClient Http
@inject NavigationManager Nav
@inject Blazored.SessionStorage.ISessionStorageService SessionStorage

<PageTitle>MonaPilot - Admin Panel</PageTitle>

@if (!isAuthenticated)
{
    <p>Redirecting to login...</p>
}
else
{
<div class="admin-panel">
    <div class="header">
        <h1>Admin Panel</h1>
        <button @onclick="GoBack" class="btn-back">Back to Dashboard</button>
    </div>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert @statusClass">@statusMessage</div>
    }

    <div class="admin-grid">
        <div class="admin-card">
            <h2>Product Management</h2>

            <div class="add-product">
                <h3>Add New Product</h3>
                <div class="form">
                    <input type="text" @bind="newProduct.Name" placeholder="Product Name" />
                    <select @bind="newProduct.Type">
                        <option value="Electronics">Electronics</option>
                        <option value="Furniture">Furniture</option>
                        <option value="Books">Books</option>
                    </select>
                    <input type="number" @bind="newProduct.Price" placeholder="Price" />
                    <input type="number" @bind="newProduct.Stock" placeholder="Stock" />
                    <button @onclick="AddProduct" class="btn-primary">Add Product</button>
                </div>
            </div>

            @if (products.Count > 0)
            {
                <table class="products-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Type</td>
                                <td>$@product.Price</td>
                                <td>@product.Stock</td>
                                <td>
                                    <button @onclick="() => DeleteProduct(product.Id)" class="btn-small btn-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div class="admin-card">
            <h2>Analytics</h2>
            <div class="stats">
                <div class="stat">
                    <p>Total Requests</p>
                    <p class="number">@totalRequests</p>
                </div>
                <div class="stat">
                    <p>Success Rate</p>
                    <p class="number">@(totalRequests > 0 ? Math.Round((double)successCount / totalRequests * 100) : 0)%</p>
                </div>
                <div class="stat">
                    <p>Avg Budget</p>
                    <p class="number">$@(averageBudget > 0 ? Math.Round(averageBudget) : 0)</p>
                </div>
                <div class="stat">
                    <p>Total Revenue</p>
                    <p class="number">$@totalRevenue</p>
                </div>
            </div>
        </div>

        <div class="admin-card">
            <h2>System Settings</h2>
            <div class="settings">
                <div class="setting">
                    <label>RabbitMQ Host</label>
                    <input type="text" value="localhost" readonly />
                </div>
                <div class="setting">
                    <label>Database</label>
                    <input type="text" value="SQLite" readonly />
                </div>
                <div class="setting">
                    <label>API Version</label>
                    <input type="text" value="1.0.0" readonly />
                </div>
            </div>
        </div>
    </div>
</div>
}

@code {
    private bool isAuthenticated = false;
    private string statusMessage = "";
    private string statusClass = "";
    private List<Product> products = new();
    private Product newProduct = new() { Type = "Electronics" };
    private int totalRequests = 0;
    private int successCount = 0;
    private decimal averageBudget = 0;
    private decimal totalRevenue = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var token = await SessionStorage.GetItemAsync<string>("authToken");
            if (string.IsNullOrEmpty(token))
            {
                Nav.NavigateTo("/login");
                return;
            }

            isAuthenticated = true;
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);
            StateHasChanged();

            await LoadData();
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        try
        {
            // Load products from API (seed data)
            products = new()
            {
                new() { Id = 1, Name = "Laptop Deluxe", Type = "Electronics", Price = 1200, Stock = 5 },
                new() { Id = 2, Name = "Smartphone Pro", Type = "Electronics", Price = 800, Stock = 10 },
                new() { Id = 3, Name = "Tablet", Type = "Electronics", Price = 500, Stock = 8 },
                new() { Id = 4, Name = "Office Chair", Type = "Furniture", Price = 300, Stock = 15 },
                new() { Id = 5, Name = "Desk", Type = "Furniture", Price = 400, Stock = 7 },
                new() { Id = 6, Name = "Book Bundle", Type = "Books", Price = 50, Stock = 100 },
            };

            // Load analytics
            var response = await Http.GetAsync("api/productrequest/logs/all");
            if (response.IsSuccessStatusCode)
            {
                var logs = await response.Content.ReadFromJsonAsync<List<ActivityLog>>() ?? new();
                totalRequests = logs.Count;
                successCount = logs.Count(l => l.Status == "Success");
                totalRevenue = logs.Sum(l => l.ProductPrice);
                averageBudget = totalRequests > 0 ? logs.Average(l => (decimal?)l.ProductPrice) ?? 0 : 0;
            }

            // Also count budget requests
            var reqResponse = await Http.GetAsync("api/productrequest/all");
            if (reqResponse.IsSuccessStatusCode)
            {
                var reqs = await reqResponse.Content.ReadFromJsonAsync<List<BudgetRequestDto>>() ?? new();
                if (totalRequests == 0) totalRequests = reqs.Count;
                if (reqs.Count > 0) averageBudget = reqs.Average(r => r.Budget);
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error loading data: {ex.Message}";
            statusClass = "alert-error";
        }
    }

    private void AddProduct()
    {
        if (string.IsNullOrWhiteSpace(newProduct.Name) || newProduct.Price <= 0)
        {
            statusMessage = "Please enter a valid product name and price.";
            statusClass = "alert-error";
            return;
        }
        newProduct.Id = products.Count > 0 ? products.Max(p => p.Id) + 1 : 1;
        products.Add(newProduct);
        statusMessage = $"Product '{newProduct.Name}' added (in-memory only).";
        statusClass = "alert-success";
        newProduct = new() { Type = "Electronics" };
    }

    private void DeleteProduct(int id)
    {
        var p = products.FirstOrDefault(p => p.Id == id);
        products.RemoveAll(p => p.Id == id);
        statusMessage = $"Product '{p?.Name}' removed (in-memory only).";
        statusClass = "alert-success";
    }

    private void GoBack()
    {
        Nav.NavigateTo("/");
    }

    public class Product
    {
        public int Id { get; set; }
        public string? Name { get; set; }
        public string? Type { get; set; }
        public decimal Price { get; set; }
        public int Stock { get; set; }
    }

    public class ActivityLog
    {
        public int Id { get; set; }
        public string? PersonName { get; set; }
        public decimal ProductPrice { get; set; }
        public string? Status { get; set; }
    }

    public class BudgetRequestDto
    {
        public int Id { get; set; }
        public decimal Budget { get; set; }
    }
}

<style>
